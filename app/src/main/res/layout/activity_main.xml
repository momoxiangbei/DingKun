<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3F3F3"
                android:gravity="center"
                android:onClick="test"
                android:padding="10dp"
                android:text="test" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#F3F3F3"
                android:gravity="center"
                android:onClick="BottomSheetActivity"
                android:padding="10dp"
                android:text="BottomSheetActivity" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#F3F3F3"
                android:gravity="center"
                android:onClick="MotionEventActivity"
                android:padding="10dp"
                android:text="MotionEventActivity" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#F3F3F3"
                android:gravity="center"
                android:onClick="ActivityLauncher"
                android:padding="10dp"
                android:text="ActivityLauncher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#F3F3F3"
                android:gravity="center"
                android:onClick="BlockCanary"
                android:padding="10dp"
                android:text="BlockCanary" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
